---
interface Props {
  title: string;
  author: string;
  description: string;
  year?: number;
}

const { title, author, description, year } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-6 hover:border-gray-300 dark:hover:border-gray-600 transition-colors">
  <h3 class="text-xl font-bold mb-2">{title}</h3>
  <p class="text-gray-600 dark:text-gray-400 mb-2">
    by {author}
    {year && <span class="text-gray-500"> ({year})</span>}
  </p>
  <p class="text-gray-700 dark:text-gray-300">{description}</p>
</div>

