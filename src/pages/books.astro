<Layout title="Books">
  <div class="space-y-8">
    <header>
      <h1 class="text-4xl font-bold mb-4">Top Books</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        A collection of books I've read and highly recommend. These cover topics from 
        science and mathematics to writing, productivity, and personal development.
      </p>
    </header>

    <div class="grid md:grid-cols-2 gap-6">
      {books.map((book) => (
        <BookCard
          title={book.title}
          author={book.author}
          description={book.description}
          year={book.year}
        />
      ))}
    </div>
  </div>
</Layout>

