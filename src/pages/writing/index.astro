---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = (await getCollection('writing')).sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
---

<Layout title="Writing">
  <div class="space-y-8">
    <header>
      <h1 class="text-4xl font-bold mb-4">Writing</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Thoughts, stories, and reflections on various topics.
      </p>
    </header>

    <div class="space-y-6">
      {posts.map((post) => (
        <article class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-6 hover:border-gray-300 dark:hover:border-gray-600 transition-colors">
          <a href={`/writing/${post.slug}`} class="block">
            <h2 class="text-2xl font-bold mb-2 hover:text-gray-700 dark:hover:text-gray-300 transition-colors">
              {post.data.title}
            </h2>
            <p class="text-gray-600 dark:text-gray-400 mb-3">
              {post.data.description}
            </p>
            <div class="flex items-center justify-between">
              <time class="text-sm text-gray-500 dark:text-gray-500">
                {post.data.pubDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex gap-2">
                  {post.data.tags.map((tag) => (
                    <span class="px-2 py-1 text-xs bg-gray-100 dark:bg-gray-700 rounded text-gray-700 dark:text-gray-300">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</Layout>

